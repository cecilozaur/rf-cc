<div class="container">
  <%= form_tag( { :action => :login, }, { :method => :post, :class => 'form-signin'}) do %>

    <h2 class="form-signin-heading">Please sign in</h2>

    <label class="sr-only">Email</label>
    <%= text_field_tag('email', nil, {:placeholder => 'Email', :class => 'form-control', :required => true}) %>

    <label class="sr-only">Password</label>
    <%= password_field_tag('password', nil, {:placeholder => 'Password', :class => 'form-control', :required => true}) %>

    <div class="well well-sm text-center">
      <%= submit_tag('Sign In', {:class => 'btn btn-lg btn-info', :type => 'submit'}) %>
      <%= link_to 'Sign in with Github', '/auth/github' -%>
    </div>

  <% end %>

</div>